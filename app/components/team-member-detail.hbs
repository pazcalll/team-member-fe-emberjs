<div class="container text-center">
  <div class="row">
    {{#each this.members as |member|}}
    <div class="col mb-4 mt-4 d-flex justify-content-center">
      <a class="card text-decoration-none d-block" style="width: 18rem;">
        <div class="card-head d-flex justify-content-end">
          <div class="btn-group" role="group" aria-label="Basic example">
            <button class="btn btn-danger" {{on "click" (fn this.deleteMember member.id)}}>
              Remove
            </button>
            <button class="btn btn-warning" data-bs-target="#editMember" data-bs-toggle="modal"
              {{on "click" (fn this.editMember member)}}>
              Edit
            </button>
          </div>
        </div>
        <div class="card-body">
          <h2 class="card-title">{{member.name}}</h2>
          <p class="card-text">{{member.role}}</p>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>
{{!-- {{yield}} --}}


<div class="modal fade" id="editMember" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="editMemberLabel">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="editMemberLabel">Edit Member</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <CardForm
          @action={{this.updateMember}}
          @formFields={{
            [
              {
                "label": "Name",
                "type": "text",
                "placeholder": "Name",
                "name": "name",
                "value": this.memberInEdit.name
              },
              {
                "label": "Role",
                "type": "text",
                "placeholder": "Role",
                "name": "role",
                "value": this.memberInEdit.role
              }
            ]
          }}
          />
      </div>
    </div>
  </div>
</div>